<h1>New painter</h1>
<%= form_with(model: @painter) do |f| %>

  <div>
    <%= f.label       :name %>
    <%= f.text_field  :name %>
  </div>

  <div>
    <h3>Paints information</h3>
    <%= f.fields_for :picture do |g|%>
      <%= g.label       :title %>
      <%= g.text_field  :title %>

      <%= g.label       :price %>
      <%= g.text_field  :price %>
    <% end %>
  </div>

  <%= f.submit "Create Painter" %>
<% end %>
